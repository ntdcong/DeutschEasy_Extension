{
  "manifest_version": 3,
  "name": "Deutsch Easy",
  "version": "1.1",
  "description": "Tra cứu danh từ tiếng Đức từ verbformen.com",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

